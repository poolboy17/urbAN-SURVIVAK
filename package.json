{
  "name": "nextjs-blog-theme",
  "description": "A customizable Next.js and Tailwind blog starter. Designed by the Bejamas agency.",
  "author": "Bejamas and Netlify Inc.",
  "contributors": [
    "Charlie Gerard",
    "Prince Wilson",
    "Tara Manicsic",
    "Thom Krupa",
    "Tomas Bankauskas"
  ],
  "homepage": "https://github.com/netlify-templates/nextjs-blog-theme",
  "bugs": {
    "url": "https://github.com/netlify-templates/nextjs-blog-theme/issues"
  },
  "scripts": {
    "dev": "next",
    "dev:watch": "next-remote-watch ./posts",
    "build": "next build",
    "start": "next start",
    "export": "next build && next export",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:check": "jest --coverage --coverageThreshold='{\"global\":{\"branches\":100,\"functions\":100,\"lines\":100,\"statements\":100}}'",
    "test:e2e": "cypress open",
    "test:e2e:headless": "cypress run",
    "lighthouse:ci": "lhci autorun",
    "analyze:size": "npx next-bundle-analyzer",
    "optimize:content": "node scripts/auto-optimize-content.js",
    "optimize:content:watch": "node scripts/auto-optimize-content.js --watch",
    "optimize:images": "node scripts/optimize-images.js",
    "prepare": "husky install"
  },
  "dependencies": {
    "@lhci/cli": "^0.15.1",
    "@mapbox/rehype-prism": "^0.9.0",
    "@next/bundle-analyzer": "^15.4.6",
    "@tailwindcss/typography": "^0.5.12",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.2.1",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "classnames": "^2.3.1",
    "cypress": "^14.5.4",
    "date-fns": "^4.1.0",
    "gray-matter": "^4.0.3",
    "jest": "^30.0.5",
    "lint-staged": "^16.1.5",
    "next": "^15.1.4",
    "next-mdx-remote": "^5.0.0",
    "next-remote-watch": "2.0.0",
    "node-mocks-http": "^1.17.2",
    "openai": "^5.12.2",
    "prettier": "^3.6.2",
    "prismjs": "^1.29.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rehype-unwrap-images": "^1.0.0",
    "remark-gfm": "^4.0.0",
    "slugify": "^1.6.6",
    "wait-on": "^8.0.4"
  },
  "devDependencies": {
    "@stackbit/cms-git": "^1.0.32",
    "@stackbit/types": "^2.0.1",
    "@tailwindcss/postcss": "^4.0.16",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.1.4",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.7",
    "postcss": "^8.4.38",
    "tailwindcss": "^4.0.16",
    "typescript": "^5.1.3"
  },
  "license": "MIT"
}